---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import PainPoints from '../components/PainPoints.astro';
import Solution from '../components/Solution.astro';
import ProductDashboard from '../components/ProductDashboard.astro';
import Integration from '../components/Integration.astro';
import Comparison from '../components/Comparison.astro';
import CTA from '../components/CTA.astro';

const seoData = {
  title: 'Pureteatime - AI 文字客服品質管理系統 | LINE OA、Live Chat 智能監控',
  description: '別讓罐頭訊息毀了您的轉換率！Pureteatime 串接 LINE OA、Live Chat、WellyTalk，AI 自動審核每則文字回覆，精準攔截已讀亂回與情緒失控，讓文字客服也能傳遞溫度。',
  keywords: 'LINE OA 客服, 客服品質管理, AI 文字分析, Live Chat 監控, 客服系統, 語意分析, 情緒偵測, 客服 QA, WellyTalk',
  ogImage: '/og-image.jpg',
  canonical: 'https://pureteatime.com'
};
---

<Layout seo={seoData}>
  <Hero />
  <PainPoints />
  <Solution />
  <ProductDashboard />
  <Integration />
  <Comparison />
  <CTA />
</Layout>

<!-- JSON-LD Structured Data for SEO -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Pureteatime",
  "applicationCategory": "BusinessApplication",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "TWD",
    "priceValidUntil": "2026-12-31",
    "availability": "https://schema.org/InStock"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "ratingCount": "127"
  },
  "description": "AI 驅動的文字客服品質管理系統，支援 LINE OA、Live Chat、WellyTalk 多平台整合"
}
</script>

