---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import PainPoints from '../components/PainPoints.astro';
import Solution from '../components/Solution.astro';
import ProductDashboard from '../components/ProductDashboard.astro';
import Integration from '../components/Integration.astro';
import Comparison from '../components/Comparison.astro';
import CTA from '../components/CTA.astro';

const seoData = {
  title: 'Pureteatime - AI-Powered Customer Service Quality Management | LINE OA & Live Chat Monitoring',
  description: 'Don\'t let canned responses kill your conversion rate! Pureteatime integrates with LINE OA, Live Chat, and WellyTalk. AI automatically reviews every text response, accurately intercepts careless replies and emotional outbursts, making text customer service warm and human.',
  keywords: 'LINE OA customer service, customer service quality management, AI text analysis, Live Chat monitoring, customer service system, sentiment analysis, emotion detection, customer service QA, WellyTalk',
  ogImage: '/og-image.jpg',
  canonical: 'https://pureteatime.com'
};
---

<Layout seo={seoData}>
  <Hero />
  <PainPoints />
  <Solution />
  <ProductDashboard />
  <Integration />
  <Comparison />
  <CTA />
</Layout>

<!-- JSON-LD Structured Data for SEO -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Pureteatime",
  "applicationCategory": "BusinessApplication",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "TWD",
    "priceValidUntil": "2026-12-31",
    "availability": "https://schema.org/InStock"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "ratingCount": "127"
  },
  "description": "AI-powered text customer service quality management system supporting multi-platform integration with LINE OA, Live Chat, and WellyTalk"
}
</script>

