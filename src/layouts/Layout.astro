---
interface Props {
  seo: {
    title: string;
    description: string;
    keywords: string;
    ogImage: string;
    canonical: string;
  };
}

const { seo } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Primary Meta Tags -->
  <title>{seo.title}</title>
  <meta name="title" content={seo.title}>
  <meta name="description" content={seo.description}>
  <meta name="keywords" content={seo.keywords}>
  <link rel="canonical" href={seo.canonical}>
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={seo.canonical}>
  <meta property="og:title" content={seo.title}>
  <meta property="og:description" content={seo.description}>
  <meta property="og:image" content={seo.ogImage}>
  <meta property="og:locale" content="en_US">
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={seo.canonical}>
  <meta property="twitter:title" content={seo.title}>
  <meta property="twitter:description" content={seo.description}>
  <meta property="twitter:image" content={seo.ogImage}>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <!-- Preconnect for Performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --bg-primary: #0f172a;
      --bg-secondary: #1e293b;
      --bg-card: #334155;
      --text-primary: #f1f5f9;
      --text-secondary: #94a3b8;
      --accent-blue: #3b82f6;
      --accent-purple: #8b5cf6;
      --accent-green: #10b981;
      --accent-red: #ef4444;
      --border-color: #475569;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background-color: var(--bg-primary);
      color: var(--text-primary);
      line-height: 1.6;
      overflow-x: hidden;
    }

    html {
      scroll-behavior: smooth;
    }

    /* Accessibility */
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }
  </style>
</head>
<body>
  <a href="#main-content" class="sr-only">Skip to main content</a>
  
  <!-- Navigation -->
  <nav class="fixed top-0 w-full bg-slate-800/80 backdrop-blur-md z-50 border-b border-slate-700" role="navigation" aria-label="Main navigation">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="/" class="brand-logo text-5xl md:text-6xl font-bold transition">
        Pureteatime
      </a>
      <div class="hidden md:flex gap-8 text-sm font-medium text-slate-300">
        <a href="#solution" class="hover:text-blue-400 transition">Solution</a>
        <a href="#product" class="hover:text-blue-400 transition">Product</a>
        <a href="#integration" class="hover:text-blue-400 transition">Integrations</a>
        <a href="#comparison" class="hover:text-blue-400 transition">Comparison</a>
      </div>
      <a href="#contact" class="px-6 py-2 bg-blue-600 text-white rounded-lg text-sm md:text-base font-medium hover:bg-blue-700 transition">
        Free Consultation
      </a>
    </div>
  </nav>

  <main id="main-content">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="py-12 px-6 bg-slate-900 text-slate-400 border-t border-slate-800" role="contentinfo">
    <div class="max-w-7xl mx-auto">
      <div class="grid md:grid-cols-4 gap-8 mb-8">
        <div>
          <h3 class="text-lg font-bold text-slate-200 mb-4">Pureteatime</h3>
          <p class="text-sm">Making every text response warm and human</p>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-slate-300 mb-3">Product</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="#solution" class="hover:text-blue-400 transition">Solution</a></li>
            <li><a href="#integration" class="hover:text-blue-400 transition">Integrations</a></li>
            <li><a href="#pricing" class="hover:text-blue-400 transition">Pricing</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-slate-300 mb-3">Resources</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="/docs" class="hover:text-blue-400 transition">Documentation</a></li>
            <li><a href="/blog" class="hover:text-blue-400 transition">Blog</a></li>
            <li><a href="/faq" class="hover:text-blue-400 transition">FAQ</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-slate-300 mb-3">Contact</h4>
          <ul class="space-y-2 text-sm">
            <li>Email: <a href="mailto:hello@pureteatime.com" class="hover:text-blue-400 transition">hello@pureteatime.com</a></li>
            <li>Phone: <a href="tel:+1-555-123-4567" class="hover:text-blue-400 transition">+1-555-123-4567</a></li>
          </ul>
        </div>
      </div>
      <div class="text-center pt-8 border-t border-slate-800 text-sm">
        <p>&copy; 2024 Pureteatime. All rights reserved. | <a href="/privacy" class="hover:text-blue-400 transition">Privacy Policy</a> | <a href="/terms" class="hover:text-blue-400 transition">Terms of Service</a></p>
      </div>
    </div>
  </footer>

  <style>
    nav {
      animation: slideDown 0.5s ease;
    }

    @keyframes slideDown {
      from {
        transform: translateY(-100%);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
    
    /* Tech-style brand logo with gradient */
    .brand-logo {
      background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 25%, #8b5cf6 50%, #06b6d4 75%, #3b82f6 100%);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 200% 200%;
      animation: gradientShift 3s ease infinite;
      text-shadow: 0 0 30px rgba(59, 130, 246, 0.5);
      filter: drop-shadow(0 0 8px rgba(59, 130, 246, 0.4));
    }
    
    .brand-logo:hover {
      animation: gradientShift 1.5s ease infinite;
      filter: drop-shadow(0 0 12px rgba(59, 130, 246, 0.6));
    }
    
    @keyframes gradientShift {
      0%, 100% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
    }
  </style>
</body>
</html>

