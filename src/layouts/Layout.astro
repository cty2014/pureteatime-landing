---
interface Props {
  seo: {
    title: string;
    description: string;
    keywords: string;
    ogImage: string;
    canonical: string;
  };
}

const { seo } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Primary Meta Tags -->
  <title>{seo.title}</title>
  <meta name="title" content={seo.title}>
  <meta name="description" content={seo.description}>
  <meta name="keywords" content={seo.keywords}>
  <link rel="canonical" href={seo.canonical}>
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={seo.canonical}>
  <meta property="og:title" content={seo.title}>
  <meta property="og:description" content={seo.description}>
  <meta property="og:image" content={seo.ogImage}>
  <meta property="og:locale" content="zh_TW">
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={seo.canonical}>
  <meta property="twitter:title" content={seo.title}>
  <meta property="twitter:description" content={seo.description}>
  <meta property="twitter:image" content={seo.ogImage}>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <!-- Preconnect for Performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --bg-primary: #0f172a;
      --bg-secondary: #1e293b;
      --bg-card: #334155;
      --text-primary: #f1f5f9;
      --text-secondary: #94a3b8;
      --accent-blue: #3b82f6;
      --accent-purple: #8b5cf6;
      --accent-green: #10b981;
      --accent-red: #ef4444;
      --border-color: #475569;
    }

    body {
      font-family: 'Noto Sans TC', -apple-system, BlinkMacSystemFont, sans-serif;
      background-color: var(--bg-primary);
      color: var(--text-primary);
      line-height: 1.6;
      overflow-x: hidden;
    }

    html {
      scroll-behavior: smooth;
    }

    /* Accessibility */
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }
  </style>
</head>
<body>
  <a href="#main-content" class="sr-only">跳到主要內容</a>
  
  <!-- Navigation -->
  <nav class="fixed top-0 w-full bg-slate-800/80 backdrop-blur-md z-50 border-b border-slate-700" role="navigation" aria-label="主要導航">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
        Pureteatime
      </a>
      <div class="hidden md:flex gap-8 text-sm font-medium text-slate-300">
        <a href="#solution" class="hover:text-blue-400 transition">解決方案</a>
        <a href="#product" class="hover:text-blue-400 transition">產品展示</a>
        <a href="#integration" class="hover:text-blue-400 transition">整合清單</a>
        <a href="#comparison" class="hover:text-blue-400 transition">效益對比</a>
      </div>
      <a href="#contact" class="px-6 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition">
        免費諮詢
      </a>
    </div>
  </nav>

  <main id="main-content">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="py-12 px-6 bg-slate-900 text-slate-400 border-t border-slate-800" role="contentinfo">
    <div class="max-w-7xl mx-auto">
      <div class="grid md:grid-cols-4 gap-8 mb-8">
        <div>
          <h3 class="text-lg font-bold text-slate-200 mb-4">Pureteatime</h3>
          <p class="text-sm">讓每一則文字回覆都充滿溫度</p>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-slate-300 mb-3">產品</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="#solution" class="hover:text-blue-400 transition">解決方案</a></li>
            <li><a href="#integration" class="hover:text-blue-400 transition">整合平台</a></li>
            <li><a href="#pricing" class="hover:text-blue-400 transition">價格方案</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-slate-300 mb-3">資源</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="/docs" class="hover:text-blue-400 transition">技術文件</a></li>
            <li><a href="/blog" class="hover:text-blue-400 transition">部落格</a></li>
            <li><a href="/faq" class="hover:text-blue-400 transition">常見問題</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-slate-300 mb-3">聯絡我們</h4>
          <ul class="space-y-2 text-sm">
            <li>Email: <a href="mailto:hello@pureteatime.com" class="hover:text-blue-400 transition">hello@pureteatime.com</a></li>
            <li>電話: <a href="tel:+886-2-1234-5678" class="hover:text-blue-400 transition">02-1234-5678</a></li>
          </ul>
        </div>
      </div>
      <div class="text-center pt-8 border-t border-slate-800 text-sm">
        <p>&copy; 2024 Pureteatime. All rights reserved. | <a href="/privacy" class="hover:text-blue-400 transition">隱私權政策</a> | <a href="/terms" class="hover:text-blue-400 transition">服務條款</a></p>
      </div>
    </div>
  </footer>

  <style>
    nav {
      animation: slideDown 0.5s ease;
    }

    @keyframes slideDown {
      from {
        transform: translateY(-100%);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
  </style>
</body>
</html>

